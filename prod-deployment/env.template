# Docker Hub настройки
DOCKER_HUB_USERNAME=mouzitoto
DOCKER_HUB_REPO=resto-hub-repo
IMAGE_VERSION=latest

# База данных
POSTGRES_PASSWORD=your_very_strong_password_here_min_16_chars

# Домены (замените на ваши реальные домены)
CLIENT_DOMAIN=restohub.kz
PARTNER_DOMAIN=partner.restohub.kz
API_DOMAIN=api.restohub.kz

# Backend переменные (для CORS) - используйте HTTPS!
ADMIN_WEB_URL=https://partner.restohub.kz
CLIENT_WEB_URL=https://restohub.kz

# JWT секрет (обязательно измените! Минимум 256 бит)
JWT_SECRET=your-very-long-and-secure-secret-key-at-least-256-bits-long-change-this-in-production

# API ключ для 1C интеграции (если используется)
API_KEY=your-api-key-here-change-in-production

# Настройки Resend для отправки писем
RESEND_API_KEY=your-resend-api-key-here
RESEND_FROM=no-reply@restohub.kz

# WhatsApp Bot настройки (Meta WhatsApp Business API)
# Провайдер: meta, green-api, twilio
WHATSAPP_PROVIDER=meta
# App ID из Meta for Developers
WHATSAPP_APP_ID=your_app_id_here
# App Secret из Meta for Developers
WHATSAPP_APP_SECRET=your_app_secret_here
# Access Token (долгоживущий токен из Meta)
WHATSAPP_ACCESS_TOKEN=your_access_token_here
# Phone Number ID из Meta for Developers
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
# WhatsApp Business Account ID из Meta for Developers
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here
# Токен для верификации webhook (придумайте секретный токен)
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_secret_verify_token_here
# URL для webhook (должен быть доступен из интернета, например: https://api.restohub.kz/admin-api/whatsapp/webhook)
WHATSAPP_WEBHOOK_URL=https://api.restohub.kz/admin-api/whatsapp/webhook
# Номер телефона бота в формате: 79991234567 (без + и пробелов)
WHATSAPP_BOT_PHONE=79991234567
# Базовый URL API (для Meta: https://graph.facebook.com/v18.0)
WHATSAPP_API_BASE_URL=https://graph.facebook.com/v18.0
# Обратная совместимость (для других провайдеров)
WHATSAPP_API_KEY=
WHATSAPP_API_SECRET=

